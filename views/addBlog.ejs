<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title>Add New Blog</title>
  <style>
    body {
      background: #000000;
      color: #f0f0f0;
      font-family: 'Poppins', sans-serif;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .main-content {
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 2rem;
    }

    .form-container {
      background: rgba(15, 15, 15, 0.9);
      backdrop-filter: blur(14px);
      padding: 2.5rem;
      border-radius: 18px;
      border: 3px solid rgba(0, 255, 200, 0.6);
      box-shadow:
        0 0 25px rgba(0, 255, 200, 0.25),
        0 0 45px rgba(255, 0, 255, 0.2),
        inset 0 0 25px rgba(0, 255, 200, 0.1);
      width: 100%;
      max-width: 750px;
      animation: fadeIn 0.6s ease forwards, pulseBorder 3s infinite alternate;
    }

    @keyframes pulseBorder {
      from { border-color: rgba(0, 255, 200, 0.6); }
      to { border-color: rgba(255, 0, 255, 0.6); }
    }

    .form-label {
      color: #00ffc3;
      font-weight: 500;
      letter-spacing: 0.5px;
      font-size: 1rem;
    }

    .form-control {
      background: rgba(0, 0, 0, 0.7);
      border: 1px solid rgba(0, 255, 200, 0.4);
      color: #f0f0f0 !important;
      border-radius: 10px;
      padding: 0.75rem;
      transition: all 0.3s ease;
      font-size: 0.95rem;
    }
    .form-control:focus {
      outline: none;
      border-color: #00ffc3;
      box-shadow: 0 0 12px #00ffc3;
      background: rgba(0, 0, 0, 0.85);
    }

    .form-control::placeholder {
      color: #bbb !important;
    }

    /* File input button */
    input[type="file"]::file-selector-button {
      background: rgba(0, 0, 0, 0.6);
      color: #00ffc3;
      border: 1px solid rgba(0, 255, 200, 0.4);
      border-radius: 8px;
      padding: 0.5rem 1rem;
      cursor: pointer;
      transition: all 0.3s ease;
    }
    input[type="file"]::file-selector-button:hover {
      background: rgba(0, 0, 0, 0.85);
      border-color: #00ffc3;
      box-shadow: 0 0 10px #00ffc3;
    }

    textarea.form-control {
      min-height: 160px;
      resize: vertical;
    }

    .btn-primary {
      background: linear-gradient(135deg, #00ffc3, #ff00ff);
      border: none;
      color: #000;
      font-weight: 600;
      font-size: 1rem;
      border-radius: 10px;
      padding: 0.75rem 1.4rem;
      transition: all 0.3s ease;
    }
    .btn-primary:hover {
      background: linear-gradient(135deg, #ff00ff, #00ffc3);
      box-shadow:
        0 0 18px #00ffc3,
        0 0 28px #ff00ff;
      transform: scale(1.05);
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
</head>
<body>
  <%- include('./partials/nav') %>

  <div class="main-content">
    <div class="form-container">
      <form action="/blog" method="post" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="coverImage" class="form-label">Cover Image</label>
          <input type="file" class="form-control" id="coverImage" name="coverImage">
        </div>

        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input type="text" class="form-control" id="title" name="title" placeholder="Enter blog title...">
        </div>

        <div class="mb-3">
          <label for="body" class="form-label">Body</label>
          <textarea name="body" class="form-control" id="body" placeholder="Write your amazing content here..."></textarea>
        </div>

        <div class="mb-3 text-center">
          <button class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
  </div>

  <%- include('./partials/scripts') %>
</body>
</html>
