<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Blog</title>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container mt-4">
      <h1><%= blog.title %></h1>
      <img src="<%= blog.coverImageURL %>" width="500px" />
      <pre class="mt-3"><%= blog.body %></pre>
    </div>

    <div class="container mt-4">
  <% if (blog.created) { %>
    <img src="<%= blog.created.profileImageURL %>" width="50px" />
    <%= blog.created.fullname %>
  <% } else { %>
    <span>Author Unknown</span>
  <% } %>
</div>


    <div class="container mt-3">
      <h1>Comments (<%= comments.length %>)</h1>
      <p>Debug: Blog ID = <%= blog.id %></p>

      <% if (locals.user) { %>
        <form action="/blog/comment/<%= blog.id %>" method="post">
          <div class="mb-3">
            <input
              type="text"
              name="content"
              class="form-control"
              placeholder="Enter your comment"
            />
            <button class="btn btn-sm btn-primary" type="submit">Add</button>
          </div>
        </form>
      <% } %>

      <div class="mt-3">
        <% comments.forEach(comment => { %>
          <div class="mb-3 border p-2 rounded">
            <img src="<%= comment.creator.profileImageURL %>" width="50px" class="me-2" />
            <strong><%= comment.creator.fullname %></strong>
            <pre class="mt-2"><%= comment.content %></pre>
          </div>
        <% }) %>
      </div>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
